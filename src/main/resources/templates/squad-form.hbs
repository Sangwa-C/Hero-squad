{{#partial "content"}}

    <div class="well">
        <h1>Create a Squad!</h1>
        <small> ~turn your imaginations into epic~ </small>
        <center>
            <form action="/squad-results" method="post">

                <div class="form-group">
                    <label for="sname"> Squad's Name</label>
                    <input id="sname" name="sname" type="text" class="form-control"><br>
                </div>

                <div class="form-group">
                    <label for="cause"> Squad's cause</label>
                    <input id="cause" name="cause" type="age" class="form-control"><br>
                </div>

                <div class="form-group">
                    <label for="size"> Hero's Size</label>
                    <input id="size" name="size" type="size" class="form-control"><br>
                </div>

                <button type="submit" class="btn btn-success">Create squad</button>
            </form>
        </center>
    </div>

{{/partial}}

{{> layout.hbs}}