{{#partial "content"}}

    <h1>Create a new hero!</h1>

    <form action="/squad-form" method="post">
        <label for="sname"> Squad's Name</label>
        <input id="sname" name="sname" type="text"><br>

        <label for="cause"> Squad's cause</label>
        <input id="cause" name="cause" type="age"><br>

        <label for="size"> Hero's Size</label>
        <input id="size" name="size" type="size"><br>

        <button type="submit" class="btn btn-default">Create squad</button>
    </form>
{{/partial}}

{{> layout.hbs}}