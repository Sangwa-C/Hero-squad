{{#partial "content"}}

    <h1>Create a new hero!</h1>

    <form action="/posts/new" method="post">
        <label for="name"> Hero's Name</label>
        <input id="name" name="name" type="text"><br>

        <label for="age"> Hero's Age</label>
        <input id="age" name="age" type="age"><br>

        <label for="power"> Hero's Hero</label>
        <input id="power" name="power" type="power"><br>

        <label for="weakness"> Hero's Weakness</label>
        <input id="weakness" name="weakness" type="weakness"><br>

        <label for="gender"> Hero's Weakness</label>
        <input id="gender" name="gender" type="gender"><br>

        <button type="submit" class="btn btn-default">Create Hero</button>
    </form>
{{/partial}}

